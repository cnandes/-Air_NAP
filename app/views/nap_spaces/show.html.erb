<div class="container">
  <br>
  <h1 class="display">Nap Space</h1>
  <p style="color: green"><%= notice %></p>
  <div class= "container">
    <%= render @nap_space %>
    <%= link_to "Book this space", new_nap_space_booking_path(@nap_space), class: "btn btn-primary"%>
    <br>
    <%= link_to "Edit NapSpace", edit_nap_space_path(@nap_space), class: "btn btn-warning  mt-2"  %>
    <br>
    <%= link_to "Delete Nap Space",
                nap_space_path(@nap_space),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-danger  mt-2"
              %>
    <br>
    <%= link_to "Index", nap_spaces_path, class: "btn btn-secondary mt-2" %>
    <%= link_to "Home", root_path, class: "btn btn-secondary mt-2" %>
  </div>
</div>
