<section class="bg-home d-flex align-items-center">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-lg-12 col-md-12">
        <div class="card login-page  rounded border-0">
          <div class="card-body">
            <h1 class="card-title title text-dark">My NapSpaces</h1>
            <br>
            <br>
            <div class="row">
              <% if @nap_spaces.empty? %>
                <p class="text-muted readmore"> You haven't added any NapSpaces!</p>
              <% end %>
              <% @nap_spaces.each do |nap_space| %>
                <div class="col-lg-4 col-md-6 mb-4 pb-22">
                  <div class="card blog blog-primary rounded border-0 shadow overflow-hidden">
                    <div class="position-relative">
                      <%= cl_image_tag nap_space.image_url.key, class: "card-img-top", height: 300 %>
                      <div class="overlay rounded-top"></div>
                      <div class="card-body content">
                        <h3 class="card-title title text-dark">  <%= nap_space.description %></h3>
                        <div class="post-meta d-flex justify-content-between mt-3">
                          <ul class="list-unstyled mb-0">
                            <li class="list-inline-item me-2 mb-0">
                              <p class="text-muted readmore"> <%= nap_space.address %></p>
                            </li>
                            <li class=" text-muted mb-2"><%= "$#{nap_space.cost_per_hr} per hr" %>  </li>
                            <li class="list-inline-item me-2 mb-0">   <%= link_to 'Read More <i class="fa-solid fa-chevron-right  fa-sm"></i>'.html_safe, nap_space_path(nap_space) %></li>
                            <li>
                              <div class="d-flex justify-content-start align-items-center">
                                <%= link_to "Edit", edit_nap_space_path(nap_space), class: "btn btn-warning  mt-2" , style: "margin-right: 4px;" %>
                                <%# <div class="m-"></div> %>
                                <%= link_to "Delete",
                              nap_space_path(nap_space),
                              data: {turbo_method: :delete, turbo_confirm: "Are you sure?" },
                              class: "btn btn-danger  mt-2"
                            %>
                              </div>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
