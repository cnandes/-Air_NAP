<%= simple_form_for(@nap_space) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-input">
    <%= f.input :description, placeholder: "Tell us about the space" %>
  </div>
  <div class="form-input">
    <%= f.input :address, placeholder: "123 Evergreen Tce, Springfield, USA" %>
  </div>
  <div class="form-input">
    <%= f.input :cost_per_hr, label: "Hourly rate", placeholder: "10.00" %>
  </div>
  <div class="form-input">
    <%= f.input :image_url, as: :file, label: "Upload an image" %>
  </div>
  <div class="form-input">
    <div class="form-actions">
      <div class="col-lg-12 mb-0">
        <div class="d-grid"> <%= f.button :submit, "Create NapSpace", class: "btn btn-primary" %>  <%= link_to "Back", root_path , class: "btn btn-secondary mt-2" %> </div>
      </div>
    </div>
  </div>
<% end %>
