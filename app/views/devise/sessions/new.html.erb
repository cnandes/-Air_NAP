<!-- Hero Start -->
<section class="bg-home d-flex align-items-center">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-7 col-md-5">
        <div class="me-lg-1">
          <%= image_tag("login_image3.png", class: "img-fluid d-block mx-auto") %>
          <div class="login img-fluid d-block mx-auto"></div>
        </div>
      </div>
      <div class="col-lg-5 col-md-7">
        <div class="card login-page shadow rounded border-0">
          <div class="card-body">
            <h4 class="card-title text-center mb-3">Login</h4>
            <div class="row">
              <%# <form class="login-form mt-4"> %>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-actions">
                  <div class="col-lg-12 mb-0">
                    <div class="d-grid">
                      <%= f.button :submit, "Log in",class: "btn btn-primary" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <!--end col-->
            <div class="col-12 text-center">
              <p class="mb-0 mt-3"><small class="text-dark me-2">Don't have an account ?</small> <%= link_to  'Sign up', new_user_registration_path %></p>
            </div>
            <div class="col-12 text-center">
              <p class="mb-0 mt-3"> <%= link_to  'Forgot your password ?', new_user_password_path %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--end container-->
</section>
<!--end section-->
<!-- Hero End -->
